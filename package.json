{
  "name": "release-automation",
  "version": "0.2.0",
  "description": "An opinionated CLI for release automation",
  "main": "bin/index.js",
  "bin": {
    "release-automation": "./bin/index.js"
  },
  "files": [
    "lib/**/*",
    "bin/**/*"
  ],
  "engines": {
    "node": ">=9.11.2"
  },
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "start": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "publish": "npm run tslint && npm run build && npm publish"
  },
  "keywords": [
    "github",
    "release",
    "release-automation",
    "semver"
  ],
  "author": "Evans Owino",
  "homepage": "https://github.com/eowino/release-automation",
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "0.0.43",
    "@types/node": "^10.12.24",
    "@types/semver": "^5.5.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "inquirer": "^6.2.2",
    "semver": "^5.6.0"
  }
}
